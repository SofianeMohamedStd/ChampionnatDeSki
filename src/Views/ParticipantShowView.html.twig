{% extends 'template.html.twig' %}
{% block title %}
    show participants
{% endblock %}

{% block content %}
    <div class="row mx-auto">
        <div class="col-8 offset-2">
            <h1>show Participants</h1>
        </div>
    {% if Listeparticipants|length != 0 %}
        <table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">nom</th>
                <th scope="col">prenom</th>
                <th scope="col">categorie</th>
                <th scope="col">profil</th>

            </tr>

            {% for participant in Listeparticipants %}
            <tbody>
            <tr>
                <th scope="row">{{ participant.id }}</th>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.categories }}</td>
                <td>{{ participant.profils }}</td>
            </tr>
            </tbody>
            {% endfor %}
            </thead>
        </table>
    <div class="col-6 offset-3">
        <form action="http://localhost/www/ChampionnatDeSki/participant/exportdata" method="post"
              name="frmCSVImport" id="frmCSVImport" class="form-horizontal">
            <input type="submit" class="btn btn-success" value="Valider" />
        </form>
    </div>
    <div class="col-6 offset-3">
        <form method="post" enctype="multipart/form-data" action="http://localhost/www/ChampionnatDeSki/participant/import">
            <div class="form-inline mt-2">
                <label for="file" class="col-1 text-right "></label>
                <input class="btn btn-success col-4" type="file" name="file"
                       id="file" required minlength="4" value="Import" />

                <input type="submit" class="btn btn-success col-4 offset-3"
                       value="Télécharger" />
            </div>

        </form>
    </div>

    {% else %}
        hi
    {% endif %}
{% endblock %}