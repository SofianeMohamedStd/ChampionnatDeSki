{% extends 'template.html.twig' %}
{% block title %}
    Epreuves
{% endblock %}

{% block content %}
    <div class="row mx-auto">
        <div class="col-8 offset-2">
            <h1>Epreuves</h1>
        </div>
        <div class="col-6 offset-3">
            <form method="post" action="http://localhost/www/ChampionnatDeSki/epreuve/add" id="formAdd" class="">
                <div class="form-group mt-2">

                    <label for="name" class="text-left col-10">
                        Lieu : </label>
                    <input class="form-control col-10" type="text" name="lieu"
                           id="" required minlength="2">
                </div>
                <div class="form-group mt-2">

                    <label for="name" class="text-left col-10">
                        Date : </label>
                    <input class="form-control col-10" type="date" name="date"
                           id="" required minlength="2">
                </div>
                <input type="submit" class="btn btn-success" value="Valider" />
            </form>
        </div>
    </div>
    </div>
    </div>
    {% if Listeepreuves|length != 0 %}
        <table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Epreuve</th>
                <th scope="col">Date</th>
                <th scope="col">Actions</th>
            </tr>

            {% for epreuve in Listeepreuves %}
            <tbody>
            <tr>
                <th scope="row">{{ epreuve.id }}</th>
                <td>{{ epreuve.lieu }}</td>
                <td>{{ epreuve.date|date("Y-m-d") }}</td>
                <td>
                    <button type="button" class="btn btn-warning"><i class="far fa-eye">Modifier</i></button>
                    <button type="button" class="btn btn-danger"><i class="fas fa-edit">Supprimer</i></button>
                    <a class="nav-link" href="http://localhost/www/ChampionnatDeSki/epreuve/{{ epreuve.id}}">Categories</a>
                </td>
            </tr>
            </tbody>
            {% endfor %}
            </thead>
        </table>
    {% else %}
        hi
    {% endif %}
{% endblock %}