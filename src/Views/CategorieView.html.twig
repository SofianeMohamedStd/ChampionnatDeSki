{% extends 'template.html.twig' %}
{% block title %}
    Categories
{% endblock %}

{% block content %}
    <div class="row mx-auto">
        <div class="col-8 offset-2">
            <h1>Categories</h1>
        </div>
    </div>
    {% if Listecategories|length != 0 %}
    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Categorie</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for categorie in Listecategories %}
                            <tr>
                                <th scope="row">{{ categorie.id }}</th>
                                <td>{{ categorie.nom_categorie }}</td>
                                <td>
                                    <button type="button" class="btn btn-warning"><i class="far fa-eye">Modifier</i></button>
                                    <button type="button" class="btn btn-danger"><i class="fas fa-edit">Supprimer</i></button>
                                </td>
                            </tr>
                            </tbody>
                            </table>
                        {% endfor %}
    {% else %}
        hi
    {% endif %}
{% endblock %}