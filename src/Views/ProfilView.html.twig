{% extends 'template.html.twig' %}
{% block title %}
    Profils
{% endblock %}

{% block content %}
    <div class="row mx-auto">
        <div class="col-8 offset-2">
            <h1>Profils</h1>
        </div>
         <div class="col-6 offset-3">
            <form method="post" action="http://localhost/www/ChampionnatDeSki/profil/add" id="formAdd" class="">
            <div class="form-group mt-2">
                            
                            <label for="name" class="text-left col-10">
                                Nouveau nom : </label>
                            <input class="form-control col-10" type="text" name="name"
                            id="" required minlength="2">
            </div>
            <input type="submit" class="btn btn-success" value="Valider" />
            </form>
        </div>
        </div>
    </div>
    </div>
    {% if Listeprofils|length != 0 %}
    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Profil</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for profil in Listeprofils %}
                            <tr>
                                <th scope="row">{{ profil.id }}</th>
                                <td>{{ profil.NomProfil }}</td>
                                <td>
                                    <a class="nav-link" href="http://localhost/www/ChampionnatDeSki/profil/supp/{{ profil.id}}">
                                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-down-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M11.5 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L11 2.707V14.5a.5.5 0 0 0 .5.5zm-7-14a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L4 13.293V1.5a.5.5 0 0 1 .5-.5z"/>
                                        </svg>
                                    </a>
                                    <a class="nav-link" href="http://localhost/www/ChampionnatDeSki/profil/supp/{{ profil.id}}">
                                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                            </table>
    {% else %}
        hi
    {% endif %}
{% endblock %}